#include<iostream>
using namespace std;
int calcNodes(int m, int IV)
{
int result = 0;
result = IV * (m - 1) + 1;
return result;
}
int main()
{
int m,IV,N;
cout << "\nEnter the maximum no. of children in full m-ary tree: ";
cin >> m;
cout << "Enter the number of internal vertices: ";
cin >> IV;
N = calcNodes(m, IV);
cout << "Number of Leaf Nodes in the full m-ary tree: " << N;
return 0;
}
